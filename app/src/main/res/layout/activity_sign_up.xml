<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkgtwo"
    tools:context=".SignUp">

    <!-- COMMENTS  -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <!-- COMMENTS  -->
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_phone_sign_up_activity"
            android:hint="Phone Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#e4e5d0"
            android:text="0988123388"
            android:textSize="34sp"
            android:inputType="phone"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"
            />

        <!-- COMMENTS  -->
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_Name_sign_up_activity"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white"
            android:text="Keanu Reeves"
            android:textSize="34sp"
            android:inputType="text"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="26"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"
            />

        <!-- COMMENTS  -->

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_password_sign_up_activity"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@android:color/white"
            android:text="12345678"
            android:textSize="34sp"
            android:inputType="textPassword"
            app:met_baseColor="@android:color/white"
            app:met_floatingLabel="highlight"
            app:met_maxCharacters="11"
            app:met_primaryColor="@android:color/white"
            app:met_singleLineEllipsis="true"
            />



    </LinearLayout>

    <!-- COMMENTS  -->

    <Button
        android:id="@+id/sign_up_button_sign_up_activity"
        android:text="Sign Up"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26sp"/>/>



